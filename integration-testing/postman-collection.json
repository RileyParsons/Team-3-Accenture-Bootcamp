{
  "info": {
    "name": "SaveSmart API",
    "description": "API endpoints for SaveSmart application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://YOUR-API-GATEWAY-URL.execute-api.ap-southeast-2.amazonaws.com/prod",
      "type": "string"
    },
    {
      "key": "test_user_id",
      "value": "demo-sarah-123",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Create User (POST /users)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{test_user_id}}\",\n  \"email\": \"sarah@student.com\",\n  \"name\": \"Sarah\",\n  \"income\": 1200,\n  \"rent\": 600,\n  \"groceryBudget\": 80,\n  \"savings\": 500,\n  \"hasCar\": true,\n  \"fuelType\": \"E10\",\n  \"location\": \"Parramatta\",\n  \"postcode\": \"2150\",\n  \"dietaryPreferences\": [\"vegetarian\"],\n  \"subscriptions\": [\"Netflix\", \"Spotify\"]\n}"
        },
        "url": {
          "raw": "{{base_url}}/users",
          "host": ["{{base_url}}"],
          "path": ["users"]
        }
      }
    },
    {
      "name": "2. Get User (GET /users/{userId})",
      "request": {
        "method": "GET",
        "header": [],
